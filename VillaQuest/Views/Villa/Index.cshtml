@model IEnumerable<VillaQuest.Domain.Entities.Villa>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<a asp-controller="villa" asp-action="Create" class="btn btn-secondary"><i class="bi bi-plus-circle"></i> Add New Villa</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Sqft</th>
            <th>Occupancy</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.Price</td>
                <td>@obj.Sqft</td>
                <td>@obj.Occupancy</td>
            </tr>
        }
    </tbody>
</table>
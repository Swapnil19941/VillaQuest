@model IEnumerable<VillaQuest.Domain.Entities.Villa>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<a asp-controller="villa" asp-action="Create" class="btn btn-secondary"><i class="bi bi-plus-circle"></i> Add New Villa</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Sqft</th>
            <th>Occupancy</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.Price</td>
                <td>@obj.Sqft</td>
                <td>@obj.Occupancy</td>
                <td>
                    <div>
                        <a asp-controller="Villa" asp-action="Update" asp-route-VillaId="@obj.Id" class="btn btn-success"><i class="bi bi-pencile-squar"></i>Edit</a>
                        <a asp-controller="Villa" asp-action="Delete" asp-route-villaId="@obj.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>